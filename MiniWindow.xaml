<Window x:Class="SteamAutoShutdown.MiniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam下载监控" SizeToContent="Height" Width="340"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        FontFamily="Segoe UI, Microsoft YaHei UI"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseDoubleClick="Window_MouseDoubleClick">

    <Border CornerRadius="12" Padding="14,10"
            BorderBrush="#55668899" BorderThickness="1">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="还原主窗口" Click="MenuRestore_Click"/>
                <MenuItem Header="关闭悬浮窗" Click="MenuClose_Click"/>
            </ContextMenu>
        </Border.ContextMenu>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                <GradientStop Color="#F01B2838" Offset="0"/>
                <GradientStop Color="#F0213347" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="#80000000" BlurRadius="16" ShadowDepth="3" Direction="270"/>
        </Border.Effect>

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="🎮" FontSize="16" Foreground="#66C0F4"
                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock x:Name="TxtSpeed" Text="监测中..." FontSize="17" FontWeight="Bold"
                               Foreground="#C7D5E0"/>
                    <TextBlock x:Name="TxtSize" Text="等待进度信息..." FontSize="10"
                               Foreground="#8F98A0" Margin="0,-1,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                            HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Ellipse x:Name="MiniDot" Width="7" Height="7" Margin="0,0,5,0"
                             VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#5C7E10"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="TxtMiniStatus" Text="监测中" FontSize="11"
                               Foreground="#8F98A0" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="3" Click="BtnRestore_Click" Cursor="Hand"
                        Margin="0,0,4,0" ToolTip="还原主窗口 (或双击/右键)">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="6" Background="Transparent" Padding="6,4">
                                <TextBlock Text="🔲" FontSize="13" Foreground="#8F98A0"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="4" Click="BtnClose_Click" Cursor="Hand"
                        ToolTip="关闭悬浮窗">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="6" Background="Transparent" Padding="6,4">
                                <TextBlock Text="✕" FontSize="13" Foreground="#8F98A0"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#33CD3B3B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Grid Margin="0,6,0,0" Height="4">
                <Border CornerRadius="2" Background="#1AFFFFFF"/>
                <Border x:Name="ProgressFill" CornerRadius="2" RenderTransformOrigin="0,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0"/>
                    </Border.RenderTransform>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#5C7E10" Offset="0"/>
                            <GradientStop Color="#66C0F4" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>

            <Button x:Name="BtnCancelShutdown" Visibility="Collapsed"
                    Click="BtnCancelShutdown_Click" Cursor="Hand"
                    Margin="0,8,0,2" Height="28">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="6" Background="Transparent"
                                BorderBrush="#88CD3B3B" BorderThickness="1" Padding="0">
                            <TextBlock Text="⚠ 紧急取消关机" FontSize="11.5" FontWeight="SemiBold"
                                       Foreground="#CD3B3B" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#22CD3B3B"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#CD3B3B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#33CD3B3B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Window>